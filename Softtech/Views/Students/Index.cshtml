    <div id="bookings" class="tab-pane fade show active">
        <div class="card card-table mb-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="datatable table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Room</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th class="text-center">
                                    <div class="table-action"> Actions</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoomTypeId)
                                    </td>
                                    <td>
                                        @item.Date.ToShortDateString()
                                    </td>

                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <span class="text-success">Accepted</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">In Progress</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="table-action">
                                            <a asp-route-id="@item.BookingId" asp-action="successStatus" asp-controller="Students" class="btn btn-sm bg-info-light">
                                                <i class="far fa-eye"></i> View More
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm bg-danger-light">
                                                <i class="fa fa-times"></i> Cancel
                                            </a>
                                            @*<a href="javascript:void(0);" class="btn btn-sm bg-primary-light">
                                                <i class="fas fa-print"></i> Print
                                            </a>*@
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
