@model Softtech.Models.TblDeposit

@{
    ViewData["Title"] = "AddDeposits";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

        <div class="page-header">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-title">Deposit Form</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="AddDeposits" asp-controller="Deposits">Dashboard</a></li>
                        <li class="breadcrumb-item active">Deposit Form</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Deposit Form</h5>
                        <p class="card-text">Deposit is not refundable</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddDeposits">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Amount" class="form-control floating" />
                                <label class="control-label">Amount</label>
                            </div>
                            <div class="form-group">
                                <input asp-for="Date" class="form-control floating" />
                                <label class="control-label">Date</label>
                            </div>
                            <div class="form-group">
                                <select asp-for="StudentId" class="form-control floating" asp-items="ViewBag.StudentId">
                                    <option value="" class="option">Select student</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
