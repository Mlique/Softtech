@model Softtech.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/assets/img/Res4.jpg" class="img-fluid" alt="Doccure Register">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Register <a href="doctor-register.html">Are you a new user?</a></h3>
                            </div>
                            <form asp-action="Register"method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group form-focus">
                                    <input asp-for="FirstName" class="form-control floating">
                                    <label class="focus-label">Name</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="LastName" class="form-control floating">
                                    <label class="focus-label">Surname</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="EmailAddress" class="form-control floating">
                                    <label class="focus-label">Email Address</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Password" class="form-control floating">
                                    <label class="focus-label">Create Password</label>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="ConfirmPassword" class="form-control floating">
                                    <label class="focus-label">Confirm Password</label>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" asp-action="Login">Already have an account?</a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Signup</button>
                                
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
