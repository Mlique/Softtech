@model IEnumerable<Softtech.Models.TblPayment>

@{
    ViewData["Title"] = "ListOfPayments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="PlaceholderHere"></div>

<div class="col-md-12">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Payment List</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            @if (Model.Count() != 0)
            {
                <button type="button" class="btn btn-light text-white">
                    <i class="fa fa-file-pdf-o"></i>
                    @Html.ActionLink("Print List", "CreatePdf", "Payments")
                </button>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header border-0">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h4 class="mb-0">Checklist</h4>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Amount Paid
                        </th>
                        <th>
                            Student
                        </th>
                        <th scope="col">Open Attach</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AmountPaid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.FullName)
                            </td>

                            <td class="row">
                                <div class="col-md-4">
                                    <a href="@item.DocumentPath" target="_blank" class="btn btn-sm btn-primary text-white">
                                        <i class="fe fe-eye"></i> View More
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>