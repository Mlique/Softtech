@model Softtech.ViewModel.ReviewViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="breadcrumb-bar col-md-12 py-4">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-12 col-12">
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Students">Student</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Review</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="write-review">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Review</label>
                <div class="star-rating">
                    <input id="star-5" type="radio" name="Rate" value="star-5">
                    <label for="star-5" title="5 stars">
                        <i class="active fa fa-star"></i>
                    </label>
                    <input id="star-4" type="radio" name="Rate" value="star-4">
                    <label for="star-4" title="4 stars">
                        <i class="active fa fa-star"></i>
                    </label>
                    <input id="star-3" type="radio" name="Rate" value="star-3">
                    <label for="star-3" title="3 stars">
                        <i class="active fa fa-star"></i>
                    </label>
                    <input id="star-2" type="radio" name="Rate" value="star-2">
                    <label for="star-2" title="2 stars">
                        <i class="active fa fa-star"></i>
                    </label>
                    <input id="star-1" type="radio" name="Rate" value="star-1">
                    <label for="star-1" title="1 star">
                        <i class="active fa fa-star"></i>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label>Your review</label>
                <textarea asp-for="Comment" maxlength="100" class="form-control"></textarea>

                <div class="d-flex justify-content-between mt-3"><small class="text-muted"><span id="chars">100</span> characters remaining</small></div>
            </div>
            <hr>
            <div class="form-group">
                <div class="terms-accept">
                    <div class="custom-checkbox">
                        <input type="checkbox" id="terms_accept">
                        <label for="terms_accept">I have read and accept <a href="#">Terms &amp; Conditions</a></label>
                    </div>
                </div>
            </div>
            <div class="submit-section">
                <button type="submit" class="btn btn-primary submit-btn">Add Review</button>
            </div>
        </form>
    </div>
