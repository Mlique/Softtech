@model IEnumerable<Softtech.Models.TblFault>

@{
    ViewData["Title"] = "ListOfFaults";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="PlaceholderHere"></div>

<div class="col-md-12">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Fault List</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            @if (Model.Count() != 0)
            {
                <button type="button" class="btn btn-light text-white">
                    <i class="fa fa-file-pdf-o"></i>
                    @Html.ActionLink("Print List", "CreatePdf", "Faults")
                </button>
            }
        </div>
    </div>
    <div class="card">
        <div class="table-responsive">
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Description
                        </th>
                        <th>
                            Report Date
                        </th>
                        <th>
                            Room
                        </th>
                        <th>
                            Student
                        </th>
                        <th scope="col">Open Attach</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReportDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room.RoomNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.FullName)
                            </td>

                            <td class="row">
                                <div class="col-md-4">
                                    <a href="@item.ImagePath" target="_blank" class="btn btn-sm btn-primary text-white">
                                        <i class="fe fe-eye"></i> View More
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
